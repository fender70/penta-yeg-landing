---
// src/pages/index.astro
import MainLayout from '../layouts/MainLayout.astro';
import Services from '../components/Services.astro';
---

<MainLayout title="Home">
  <!-- Hero Section -->
  <section class="hero relative bg-blue-600 text-white py-12 md:py-20 text-center">
    <div class="absolute inset-0 bg-black opacity-50"></div>
    <div class="container mx-auto relative z-10 px-4">
      <h1 class="text-3xl md:text-5xl font-bold mb-3 md:mb-4">
        Skilled Temporary Staffing Solutions
      </h1>
      <p class="text-base md:text-xl max-w-2xl mx-auto leading-relaxed">
        Penta YEG General Services specializes in providing highly skilled temporary workers to support industries facing urgent and specialized labor demands.
      </p>
      <a href="/contact" class="mt-4 md:mt-6 inline-block bg-white text-blue-600 py-2 px-6 rounded font-semibold hover:bg-gray-200">
        Contact Us
      </a>
    </div>
  </section>

  <style>
    .hero {
      background-image: url('/images/construction-site.jpg');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    }
  </style>

  <!-- About Section (Who We Are) -->
  <section class="py-8 md:py-12">
    <div class="container mx-auto text-center px-4">
      <h2 class="text-2xl md:text-3xl font-bold mb-4 md:mb-6">Who We Are</h2>
      <p class="text-base md:text-lg max-w-3xl mx-auto leading-relaxed">
        We understand the complexities and urgency involved in industries like abatement, flood and water damage restoration, biohazard cleaning and disinfection, demolition, environmental cleanup, and oilfield services. Our reliable, skilled temporary staffing solutions keep your operations running smoothlyâ€”no matter the scale or urgency.
      </p>
    </div>
  </section>

  <!-- Services Section -->
  <Services />

  <!-- Contact Form Section -->
  <section class="py-12 bg-gray-100">
    <div class="container mx-auto">
      <h2 class="text-3xl font-bold text-center mb-8">Get in Touch</h2>
      <form
        action="#"
        method="POST"
        class="max-w-lg mx-auto bg-white p-6 rounded shadow"
      >
        <div class="mb-4">
          <label for="name" class="block text-gray-700 font-semibold mb-2">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            required
            class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:border-blue-600"
          />
        </div>
        <div class="mb-4">
          <label for="email" class="block text-gray-700 font-semibold mb-2">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:border-blue-600"
          />
        </div>
        <div class="mb-4">
          <label for="phone" class="block text-gray-700 font-semibold mb-2">Phone</label>
          <input
            type="tel"
            id="phone"
            name="phone"
            class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:border-blue-600"
          />
        </div>
        <div class="mb-4">
          <label for="message" class="block text-gray-700 font-semibold mb-2">Message</label>
          <textarea
            id="message"
            name="message"
            rows="4"
            required
            class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:border-blue-600"
          ></textarea>
        </div>
        <button
          type="submit"
          class="w-full bg-blue-600 text-white py-2 px-4 rounded font-semibold hover:bg-blue-700"
        >
          Send Message
        </button>
      </form>
    </div>
  </section>
</MainLayout>