---
// src/pages/index.astro
import MainLayout from '../layouts/MainLayout.astro';
import Services from '../components/Services.astro';
---

<MainLayout title="Home">
  <!-- Hero Section -->
  <section class="hero relative bg-blue-600 text-white py-12 md:py-20 text-center">
    <div class="absolute inset-0 bg-black opacity-50"></div>
    <div class="container mx-auto relative z-10 px-4">
      <h1 class="text-3xl md:text-5xl font-bold mb-3 md:mb-4">
        Skilled Temporary Staffing Solutions
      </h1>
      <p class="text-base md:text-xl max-w-2xl mx-auto leading-relaxed">
        Penta YEG General Services specializes in providing highly skilled temporary workers to support industries facing urgent and specialized labor demands.
      </p>
      <a href="/contact" class="mt-4 md:mt-6 inline-block bg-blue-600 text-white py-2 px-6 rounded font-semibold hover:bg-blue-700 transition duration-300 hover:scale-105 focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
        Contact Us
      </a>
    </div>
  </section>

  <style>
    .hero {
      background-image: url('/images/construction-site.jpg');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    }
  </style>

  <!-- Services Section -->
  <Services />

  <!-- Contact Form Section -->
  <section class="py-12 bg-gray-100">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto bg-white p-6 rounded shadow text-center">
        <h1 class="text-3xl font-bold mb-4">Contact Us</h1>
        <p class="mb-4">Reach out to us for your staffing needs:</p>
        <p class="mb-2">Email: <a href="mailto:admin@pentayeg.ca" class="underline text-blue-600 hover:text-blue-800">admin@pentayeg.ca</a></p>
        <p class="mb-2">Phone: +1 (780) 278-0145</p>
        <p>Address: 13127 156 ST NW Edmonton, AB T5V 1V2, Canada</p>
      </div>
    </div>
  </section>

</MainLayout>