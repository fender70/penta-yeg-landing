---
// src/components/Header.astro
---

<header class="bg-blue-800 text-white py-4">
  <nav class="container mx-auto flex justify-between items-center px-4">
    <!-- Logo/Title -->
    <h1 class="text-lg md:text-xl font-bold">Penta YEG General Services</h1>

    <!-- Hamburger Menu Button (Visible on Mobile) -->
    <button class="md:hidden text-2xl focus:outline-none" aria-label="Toggle navigation" id="nav-toggle">
      â˜° <!-- Hamburger icon -->
    </button>

    <!-- Navigation Links -->
    <ul class="nav-links hidden md:flex md:space-x-6 absolute md:static top-16 left-0 w-full md:w-auto bg-blue-800 md:bg-transparent flex-col md:flex-row items-center md:items-start p-4 md:p-0">
      <li><a href="/" class="block py-2 md:py-0 hover:text-gray-300">Home</a></li>
      <li><a href="/about" class="block py-2 md:py-0 hover:text-gray-300">About</a></li>
      <li><a href="/services" class="block py-2 md:py-0 hover:text-gray-300">Services</a></li>
      <li><a href="/contact" class="block py-2 md:py-0 hover:text-gray-300">Contact</a></li>
    </ul>
  </nav>
</header>

<script>
  // Toggle navigation menu on mobile
  document.getElementById('nav-toggle').addEventListener('click', () => {
    const navLinks = document.querySelector('.nav-links');
    navLinks.classList.toggle('hidden');
  });
</script>

<style>
  /* Ensure the nav-links stack vertically on mobile */
  .nav-links {
    transition: all 0.3s ease-in-out;
  }

  /* Adjust padding and spacing */
  @media (max-width: 768px) {
    .nav-links {
      display: none; /* Hidden by default, toggled by JS */
    }
  }
</style>