<header class="bg-blue-800 text-white py-1">
  <nav class="container mx-auto flex justify-between items-center px-4">
    <a href="/">
      <img src="/images/logo.png" alt="Penta YEG Logo" class="h-16 md:h-20 w-auto" />
    </a>
    <button class="md:hidden text-2xl focus:outline-none z-10" aria-label="Toggle navigation" id="nav-toggle">
      â˜°
    </button>
    <ul class="nav-links hidden md:flex md:space-x-6 absolute md:static top-16 left-0 w-full md:w-auto bg-blue-800 md:bg-transparent flex-col md:flex-row items-center md:items-start p-4 md:p-0 z-0">
      <li><a href="/" class="block py-2 md:py-0 hover:text-gray-300">Home</a></li>
      <li><a href="/about" class="block py-2 md:py-0 hover:text-gray-300">About</a></li>
      <li><a href="/services" class="block py-2 md:py-0 hover:text-gray-300">Services</a></li>
      <li><a href="/contact" class="block py-2 md:py-0 hover:text-gray-300">Contact</a></li>
    </ul>
  </nav>
</header>

<script client:load>
  document.addEventListener('DOMContentLoaded', () => {
    const navToggle = document.getElementById('nav-toggle');
    const navLinks = document.querySelector('.nav-links');
    if (navToggle && navLinks) {
      navToggle.addEventListener('click', () => {
        navLinks.classList.toggle('hidden');
      });
    } else {
      console.error('Navigation toggle elements not found');
    }
  });
</script>

<style>
  .nav-links {
    transition: all 0.3s ease-in-out;
  }
  @media (max-width: 768px) {
    .nav-links {
      display: none;
    }
    .nav-links:not(.hidden) {
      display: flex;
    }
  }
</style>